#include "IRremote.h"

IRrecv irrecv(15);
decode_results results;

void setup() {
   Serial.begin(9600); // ouvre le port s√©rie
   irrecv.enableIRIn();
   pinMode(23, OUTPUT);  // initialise les broches
   pinMode(22, OUTPUT);
   Serial2.begin(19200, SERIAL_8N1, 16,17);
   
}

void loop() {
   if (irrecv.decode(&results)) {
      Serial2.println(results.value);

      
      if (results.value == 16748655) { 
      
      delay(10);
      
      Serial2.println("x"); }
      
      if (results.value == 16769055) { 
      
      delay(10);
      
      Serial2.println("f"); }

      if (results.value == 16754775) { 
      
      delay(10);
      
      Serial2.println("r"); }

      if (results.value == 16734885) { digitalWrite(23, HIGH);
      
      delay(10);
      
      digitalWrite(23, LOW);
      
      Serial2.println("q"); }
    
      if (results.value == 16716015) { digitalWrite(22, HIGH);
      
      delay(10);
      
      digitalWrite(22, LOW); 
      
      Serial2.println("d");}

      if (results.value == 16718055) { digitalWrite(22, HIGH); digitalWrite(23, HIGH);
      
      delay(10);
      
      digitalWrite(23, LOW);
      
      digitalWrite(22, LOW); 
      
      Serial2.println("z");}
      
      if (results.value == 16724175) {  digitalWrite(12, LOW); }
 
      irrecv.resume();
   }
}
